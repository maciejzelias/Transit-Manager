<%- include("../../fragments/header.ejs") %>

<main>
  <h2>Nowy pracownik</h2>

  <form class="form" novalidate onsubmit="return validateForm();">
    <label for="firstName"> Imię: <span class="symbol-required">*</span></label>
    <input type="text" name="firstName" id="firstName" required />
    <span id="errorFirstName" class="errors-text">Pole jest wymagane</span>

    <label for="lastName">
      Nazwisko: <span class="symbol-required">*</span></label
    >
    <input type="text" name="lastName" id="lastName" required />
    <span id="errorLastName" class="errors-text">Pole jest wymagane</span>

    <label for="birthdayYear">
      Rok urodzenia <span class="symbol-required">*</span></label
    >
    <input
      type="number"
      name="birthdayYear"
      id="birthdayYear"
      required
      min="1950"
      max="2022" />
    <span id="errorBirthdayYear" class="errors-text"
      >Rok musi mieścić się w przedziale 1950 - 2022</span
    >

    <div class="form-buttons">
      <p id="errorsSummary" class="errors-text">Formularz zawiera błędy</p>
      <input type="submit" value="Dodaj" class="form-button-submit" />
      <a href="./list.html" class="form-button-cancel">Anuluj</a>
    </div>
  </form>
</main>
<%- include("../../fragments/footer.ejs") %>
