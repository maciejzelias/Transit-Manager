<%- include("../../fragments/header.ejs") %>

<main>
  <h2>Lista kierowcow</h2>
  <table class="table-list">
    <thead>
      <tr>
        <th>Imie</th>
        <th>Nazwisko</th>
        <th>Rok urodzenia</th>
        <th>Akcje</th>
      </tr>
    </thead>

    <tbody>
      <% for (let driver of drivers) { %>
      <tr>
        <td><%= driver.firstName %></td>
        <td><%= driver.lastName %></td>
        <td><%= driver.birthdayYear %></td>
        <td>
          <ul class="list-actions">
            <li>
              <a
                href="/drivers/details/<%=driver._id%>"
                class="list-actions-button-details"
                >Szczegoły</a
              >
            </li>
            <li>
              <a
                href="/drivers/edit/<%=driver._id%>"
                class="list-actions-button-edit"
                >Edytuj</a
              >
            </li>
            <li>
              <a
                href="/drivers/delete/<%=driver._id%>"
                class="list-actions-button-delete"
                >Usuń</a
              >
            </li>
          </ul>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>

  <p class="button-add">
    <a href="/drivers/add"> Dodaj nowego pracownika </a>
  </p>
</main>
<%- include("../../fragments/footer.ejs") %>
