

    <%- include("../../fragments/header.ejs") %>

    <main>
        <h2>
            Nowy przejazd
        </h2>

        <form class="form" novalidate onsubmit="return validateForm();">
            <label for="toWhere"> Do: <span class="symbol-required">*</span></label>
            <input type="text" name="toWhere" id="toWhere" required>
            <span id="errortoWhere" class="errors-text">Pole jest wymagane</span>

            <label for="dateFrom"> Data Od: <span class="symbol-required">*</span></label>
            <input type="date" name="dateFrom" id="ProductionYear" required>
            <span id="errordateFrom" class="errors-text">Pole jest wymagane</span>

            <label for="dateTo"> Data do: </label>
            <input type="date" name="dateTo" id="dateTo">
            <span id="errordateTo" class="errors-text"></span>

            <label for="vehicle"> Pojazd: <span class="symbol-required">*</span></label>
            <select name="vehicle" id="vehicle" required>
                <option>
                    -- wybierz pojazd --
                </option value="1">
                <option>
                    Mercedes 1998
                </option>
                <option value="2">
                    Scania 2000
                </option>
                <option value="3">
                    Scania 2004
                </option>
            </select>
            <span id="errorVehicle" class="errors-text">źle wybrany pojazd</span>

            <label for="driver"> Kierowca: <span class="symbol-required">*</span></label>
            <select name="driver" id="driver" required>
                <option>
                    -- wybierz kierowcę --
                </option>
                <option value="1">
                    Jan Kowalski
                </option>
                <option value="2">
                    Michał Jarosz
                </option>
                <option value="3">
                    Jakub Mazur
                </option>
            </select>
            <span id="errorDriver" class="errors-text">źle wybrany kierowca</span>


            <div class="form-buttons">
                <p id="errorsSummary" class="errors-text">Formularz zawiera błędy</p>
                <input type="submit" value="Dodaj" class="form-button-submit"/>
                <a href="/transits" class="form-button-cancel">Anuluj</a>
            </div>
        </form>
    </main>


    <%- include("../../fragments/footer.ejs") %>